function setFontSizes(axisHandle, plotHandle, varargin)

    self.fontName = 'Helvetica';
    self.fontSize = 12;
    
    % parse inputs
    parser = inputParser;
    parser.addParamValue('fontName', self.fontName);
    parser.addParamValue('fontSize', self.fontSize);
 
    % Execute the parser to make sure input is good
    parser.parse(varargin{:});
    % Copy the parse parameters to the ExperimentController object
    pNames = fieldnames(parser.Results);
    for k = 1:length(pNames)
       self.(pNames{k}) = parser.Results.(pNames{k}); 
    end
    
    set(gca, 'fontName', self.fontName, 'fontSize', self.fontSize);
    
    labelHandle = get(gca,'xlabel');
    set(labelHandle, 'fontName', self.fontName, 'fontSize', round(self.fontSize*1.30), 'fontWeight', 'b');
    
    labelHandle = get(gca,'ylabel');
    set(labelHandle, 'fontName', self.fontName, 'fontSize', round(self.fontSize*1.30), 'fontWeight', 'b');
    
    titleHandle = get(gca,'title');
    set(titleHandle, 'fontName', self.fontName, 'fontSize', round(self.fontSize*1.50), 'fontWeight', 'b');
    
    legendHandle = findobj(gcf,'Tag','legend')
    set(legendHandle, 'fontName', self.fontName, 'fontSize', round(self.fontSize*1.2), 'fontWeight', 'b');
    

    
end
